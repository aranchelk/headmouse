[headmouse]

input_tracker = eye_tracker

# display "mirror" window
input_visualize = True 

# if no eye is detected within this timeout, stop looking to save CPU
input_realtime_search_timeout = 2.0

input_camera_fps = 30
input_camera_resolution = 640x480

# use PyMouse to move this machine's mouse cursor directly
output = pymouse_output

smoothing = 0.4
output_smoothing = 0.4

acceleration = 0.1
sensitivity = 0 

# makes head movements close to the screen small for detail work and
# head movements far from the screen large for quick cursor motions
distance_scaling = True

# lots of debug output
verbosity = 3
